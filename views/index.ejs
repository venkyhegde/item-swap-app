<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <link rel='stylesheet' href='/stylesheets/index.css' />

  </head>
  <body>
   <div class="wrapper">
     <div class="container-fluid">
         <div class="row">
             <div class="col-sm-12">
                 <% include partials/header.ejs %>
             </div>
         </div>
         <div class="row content-justiify-center content-row">
             <div class="col-3">
                <% include partials/site-nav.ejs%>
             </div>
             <div class="col-9 mt-4">

                 <%if(undefined === data.loginFlag || null === data.loginFlag || false === data.loginFlag ||'' === data
                         .loginFlag){ %>
                     <h3> Welcome...</h3>
                 <%}else{%>
                         <h3> Welcome <%=data.docs.firstName%>!</h3>
                 <% }%>




                 <!--Carousel-->
                 <div class="row content-justify-center">
                     <div class="col-9">
                         <div class="card">
                             <div class="card-body">

                        <%
                        var coverImages = [{url:'/images/batman-cover.jpg',message:'Know the batman more!'}, {url:'/images/harry-potter-2-cover.jpg', message:'Harry Potter Series!'}, {url:'/images/harry-potter-cover.jpg', message:'Harry Potter Series!'},{url:'/images/harry-potter-3-cover.jpg', message:'Harry Potter Series!'}, {url:'/images/the-da-vinci-code-cover.jpg',
                                message:'!!!!!!!!!'}, {url:'/images/anime-cover.jpg', message:'Animee.....'}] %>

                         <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                             <ol class="carousel-indicators">
                                 <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                                 <% for(var i=1;i<coverImages.length;i++){

                                 %>
                                     <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>"></li>
                                 <%}%>
                             </ol>
                             <div class="carousel-inner">
                                 <div class="carousel-item active">
                                     <img class="d-block w-100" src="/images/the-da-vinci-code-cover.jpg" alt="First
                                     slide" width="100%" height="400">
                                 </div>
                                 <% for(var i=1;i<coverImages.length;i++){
                                     console.log("from view-"+coverImages[i].url);
                                 %>
                                     <div class="carousel-item">
                                         <img class="d-block w-100" src="<%=coverImages[i].url%>" alt="<%= i %>
                                         slide" width="100%" height="400">
                                         <%if(undefined !== coverImages[i].message || null !== coverImages[i].message
                                         || '' !== coverImages[i].message){%>
                                         <div class="carousel-caption d-none d-md-block">
                                                     <h3><%=coverImages[i].message%></h3>
                                             </div>
                                         <%}%>
                                     </div>
                                 <%}%>


                             </div>
                             <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                 <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                 <span class="sr-only">Previous</span>
                             </a>
                             <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                 <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                 <span class="sr-only">Next</span>
                             </a>
                         </div>

                             </div>
                         </div>

                     </div>
                 </div>
             </div>
         </div>





       <% include partials/footer.ejs%>
     </div>


   </div>
  </body>
</html>
